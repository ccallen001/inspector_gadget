{
    "manifest_version": 2,
    "name": "Inspector Gadget",
    "version": "1.0",
    "icons": {
        "128": "images/icon.png"
    },
    "browser_action": {
        "default_icon": "images/icon1.png"
    },
    // js files
    "background": {
        "scripts": [
            "javascript/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "javascript/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "javascript/*",
        "images/*",
        "sounds/*"
    ]
}